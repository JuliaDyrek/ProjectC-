@model IEnumerable<ProjektRestauracja.Models.Order>

@{
    ViewData["Title"] = "Order List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Restaurant Order System</title>
    <link href="~/css/stylesOrders.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        <p>
            <a asp-action="Create" class="btn">Create New Order</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ReservationId)</th>
                    <th>@Html.DisplayNameFor(model => model.Dish)</th>
                    <th>Price</th>
                    <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                    <th>Total Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ReservationId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Dish.Name)</td>
                        <td>@item.Dish.Price.ToString("C2")</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@item.TotalPrice.ToString("C2") </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
